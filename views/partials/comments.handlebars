<div>
  {{#each this}}
  <section class="post mt-2">
    <div class="post-title">
      <h6>
      {{user.username}} on {{format_date created_at}}
      </h6>
    </div>
    <div class="post-body">
      {{comment_text}}
    </div>
    <div>
      <a href="/dashboard/editComment/{{id}}" class="form-control btn btn-sm btn-warning mt-1 p-2">Edit Comment</a>
    </div>
  </section>
  {{/each}}
</div>
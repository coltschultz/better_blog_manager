<div class="post">
  <div class="post-title"><h3>Login</h3></div>
  <div class="post-body">
    <form class="login-form">
      <div>
        <label for="email-login">E-Mail:</label>
        <input type="text" class="form-control mb-3" id="email-login" />
      </div>
      <div>
        <label for="password-login">Password:</label>
        <input type="password" class="form-control" id="password-login" />
      </div>
      <div>
        <button type="submit" class="form-control btn btn-secondary mt-3 mb-3">Login</button>
      </div>
      <a href="/create" id="createButton">Create Account Instead</a>
    </form>
  </div>
</div>

<script src="/javascript/login.js"></script>
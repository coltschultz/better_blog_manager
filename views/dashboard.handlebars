<section class="d-flex justify-content-center">
  
  <div id="form-container">
    <div class="post-title">
      <h2>Create New Post</h2>
    </div>
    <div class="post-body">
      <form class="new-post-form">
        <div>
          <label for="post-title">Title</label>
          <input class="form-control" type="text" id="post-title" name="post-title" />
        </div>
        <div>
          <label for="post-content">Post Content</label>
          <textarea class="form-control" id="post-content" name="post-content"></textarea>
        </div>
        <button type="submit" class="mt-3 form-control btn btn-success">Create</button>
      </form>
    </div>
  </div>
</section>

{{#if posts.length}}
<section class="d-flex justify-content-center">
  <div id="post-container">
    
      <h3>Your Posts</h3>
      {{#each posts as |post|}}
      <div>
        {{> post-info post}}
        {{post_content}}
        <a href="/dashboard/edit/{{post.id}}" class="btn btn-warning edit-link mt-5">Edit post</a>
      </div>
      {{/each}}
    
  </div>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
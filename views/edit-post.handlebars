<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <input name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <textarea name="post-content" id="post-content" type="text" value="{{post.post_content}}"></textarea>
    </div>
    <div>
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<div class="post">
  <div class="post-title"><h6>Add a comment:</h6></div>
  <div class="post-body">
    <form class="comment-form">
      <div>
        <p>Enter your comment:</p>
        <textarea name="comment-body" class="form-control"></textarea>
      </div>

      <div>
        <button type="submit" class="form-control btn btn-secondary mt-2">Submit</button>
      </div>
    </form>
  </div>
</div>

<h4 class="mt-2">Comments:</h4>
{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>